/// task 4
public class Task4_1 {
	public static void main(String[] args) {
		int[] arraytest = {12, 5, 9, 8, 4, -7, -2, 45, 87};
		System.out.println(ArrayCheckEven(arraytest));
	}
	public static int ArrayCheckEven(int a[]) {
	    int count = 0;
	    for (int i = 0; i < a.length; i++) {
	        if (a[i] > 0 && a[i] % 2 != 0) {
	            count++;
	        }
	        else {
	            continue;
	        }
	    }
	    return count;
	}
}
