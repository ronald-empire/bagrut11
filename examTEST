/// task 1 - part 2
public class Task1_2 {
	public static void main(String[] args) {
		int num = 4;
		String[] arraytest = {"test1", "test2", "test3", "t4", "five"};
		System.out.println(LengthCheck(arraytest, num));
	}
	public static int LengthCheck(String a[], int n) {
	    int count = 0;
	    for (int i = 0; i < a.length; i++) {
	        String loc = a[i];
	        if (n < loc.length()) {
	            count++;
	        }
	        else {
	            continue;
	        }
	    }
	    return count;
	}
}


